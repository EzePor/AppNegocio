<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppNegocio.ViewModels.Commons.ProdutosVM"
             x:Class="AppNegocio.Views.Commons.ProductosV.ProductosView"
             Title="Productos"
             BackgroundColor="#121212"
NavigationPage.HasNavigationBar="False">
    
    <ContentPage.BindingContext>
        <vm:ProductosViewModel />
    </ContentPage.BindingContext>

    <!-- Usamos un Grid para dividir la vista -->
    <Grid RowDefinitions="Auto, *, Auto" Padding="10">

        <!-- TÃ­tulo y ActivityIndicator -->
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label 
             Text="Productos"
             FontSize="28"
             HorizontalOptions="Center" 
             VerticalOptions="Start"
             TextColor="White"
             FontAttributes="Bold" />

            <ActivityIndicator 
             IsRunning="{Binding ActivityStart}" 
             IsVisible="{Binding ActivityStart}"
             Color="White" />
        </VerticalStackLayout>

        <!-- Lista de productos dentro de un ScrollView para evitar overflow -->
        <ScrollView Grid.Row="1">
            <CollectionView
             ItemsSource="{Binding Productos}"
             SelectedItem="{Binding ProductoCurrent}"
             SelectionMode="Single"
             HeightRequest="500"
             BackgroundColor="#1E1E1E">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*,*,*" Padding="5">
                            <Label Text="{Binding nombre}" Grid.Column="0" TextColor="White" />
                            <Label Text="{Binding Rubro}" Grid.Column="1" TextColor="White" />
                            <Label Text="{Binding precioF}" Grid.Column="2" TextColor="White" />
                            <Label Text="{Binding stock}" Grid.Column="3" TextColor="White" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Botones en la parte inferior, siempre visibles -->
        <HorizontalStackLayout Grid.Row="2" Spacing="10" HorizontalOptions="Center" Margin="0,10,0,0">
            <Button 
             Text="Agregar"
             Command="{Binding AgregarCommand}" 
             WidthRequest="100"
             HeightRequest="40"
             BackgroundColor="#2196F3"
             TextColor="White"
             FontAttributes="Bold"
             CornerRadius="10" />

            <Button 
             Text="Editar"
             Command="{Binding EditarCommand}" 
             WidthRequest="100"
             HeightRequest="40"
             BackgroundColor="#FF9800"
             TextColor="White"
             FontAttributes="Bold"
             CornerRadius="10" />

            <Button 
             Text="Eliminar"
             Command="{Binding EliminarCommand}" 
             WidthRequest="100"
             HeightRequest="40"
             BackgroundColor="#F44336"
             TextColor="White"
             FontAttributes="Bold"
             CornerRadius="10" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>